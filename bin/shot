#!/bin/bash

RAILS_ENV=test

bin/check_rails_best_practices
if [ $? -ne 0 ]; then
  exit 1
fi

echo "Running Brakeman..."
bundle exec brakeman -c config/brakeman.yml
if [ $? -ne 0 ]; then
  exit 1
else
  echo -e "\033[0;32mSecurity Checks OK\033[0m\n"
fi
#TODO: add Simple Cov to bin/shot and semaphore
echo "Running RubyCritic.."
bundle exec rubycritic app/ lib/ --minimum-score 99 --no-browser
if [ $? -ne 0 ]; then
  exit 1
